{
    "manifest_version": 3,
    "name": "DOM Modifier Extension",
    "version": "1.0",
    "description": "Dynamically modifies the DOM of web pages.",
    "permissions": [
      "activeTab"
    ],
    "icons": {
        "16": "images/get_started16.png",
        "48": "images/get_started48.png",
        "128": "images/get_started128.png"
      },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/get_started16.png",
        "48": "images/get_started48.png"
      }
    },
    
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["contentScript.js"]
      }
    ]
  }
  